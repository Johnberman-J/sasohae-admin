    <style>
        body,
        button,
        input,
        textarea {
            font-family: 'Noto Sans KR', sans-serif;
        }

        td {
            font-size: medium;
        }

        .add {
            color: green !important;
        }

        .delete {
            color: red !important;
        }

        .button.add {
            background-color: green;
            border-color: transparent;
            color: #fff !important;
            display: inline-block;
            margin-left: auto;
            margin-top: 20px;
            margin-right: 20px;
            width: 200px;
            border-radius: inherit;
        }

        .button.add.is-outlined {
            background-color: transparent;
            border-color: orange;
            color: orange !important;
        }

        .card-body {
            text-align: center;
        }

        .dataTable-sorter {
            text-align: center;
            font-size: medium;
        }
    </style>


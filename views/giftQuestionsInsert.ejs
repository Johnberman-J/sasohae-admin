    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="../public/css/styles.css" rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Gaegu&family=Jua&family=Nanum+Brush+Script&family=Nanum+Pen+Script&family=Noto+Sans+KR&display=swap"
        rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"
        crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        label {
            font-family: 'Noto Sans KR', sans-serif;
        }

        .btn {
            font-weight: 600;
        }

        .form-horizontal {
            display: block;
            margin: auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .giftQuestions-group {
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .checkbox-inline {
            margin-right: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
            white-space: nowrap;
            margin: 20px 30px 20px 0px;
        }
    </style>

    <script type="text/javascript">
        // 선물 질문 등록
        function insertInfo(checkedRadio) {        
            // 체크된 라디오 버튼 확인   
            const radio_length = document.getElementsByName("giftQuestionType").length;
            for (var i = 0; i < radio_length; i++) {
                if (document.getElementsByName("giftQuestionType")[i].checked == true) {
                    var chkType = (document.getElementsByName("giftQuestionType")[i].value);
                }
            }           
            if ($("#giftQuestion").val() == "" ) { // 미입력 상태일 경우 
                alert("공백 없이 입력해주세요!");
                return;
            }       
            $.ajax({
                type: "POST",
                url: `/api/giftQuestions`,
                data: {
                    giftQuestionType: chkType,
                    giftQuestion: $("#giftQuestion").val(),             
                },
                success: function (response) {
                    location.href = "/giftQuestionsList";
                }, 
                error: function (error) {
                    alert(error.responseJSON.errorMessage)
                },
            });
        }

        function goToList() {
            location.href = "giftQuestionsList";
        }
    </script>

</head>

<body class="sb-nav-fixed">
    <%- include('layoutHeader') %>
        <!-- side bar start -->
        <div id="layoutSidenav"></div>
        <%- include ('layoutBody') %>
            <!-- side bar end -->

            <!-- 페이지에 알맞게 수정 필요 시작 -->

            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">선물 질문 등록</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">SASOHAE GIFTS QUESTIONS</li>
                        </ol>
                        <div class="card mb-4">
                            <!-- 내부 폼-->
                            <form class="form-horizontal">
                                <div class="giftQuestions-group">
                                    <div class="form-group">
                                        <label for="giftQuestionType" class="col-sm-2 control-label">질문 타입 : </label>
                                        <input type="radio" name="giftQuestionType" style="margin-right:10px;" value="personality"
                                            checked="checked">Personality
                                        <input type="radio" name="giftQuestionType" style="margin-right:10px;"
                                            value="emotional">Emotional
                                        <input type="radio" name="giftQuestionType" style="margin-right:10px;"
                                            value="trendy">Trendy
                                    </div>
                                    <div class="form-group">
                                        <label for="giftQuestion" class="col-sm-2 control-label">질문 내용 : </label>
                                        <input type="input" class="form-control" id="giftQuestion"
                                            style="width: 600px; display:inline" placeholder="질문을 입력해주세요">
                                    </div>                         
                                    <div class="form-group">
                                        <div class="col-sm-offset-2 col-sm-10">
                                            <div>
                                                <button type="button" class="btn btn-success" onclick="insertInfo()"
                                                    style="margin-right: 50px; margin-top: 30px; background-color: rgb(32, 92, 4);border-color: rgb(32, 92, 4);">등록하기</button>
                                                <button type="button" class="btn btn-warning" onclick="goToList()"
                                                    style="margin-top: 30px">취소하기</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </main>

                <!-- 페이지에 알맞게 수정 필요 끝 -->

